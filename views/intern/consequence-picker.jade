extends ../layout

block scripts

  script.
    var main = function() {
      //The array of questions
      var consequences = [
          'You are not allowed to speak Tagalog for the day.',
          'Say Anneyeong before speaking.',
          'Say meow at the end of every sentence.',
          'No one talks to you for the day.',
          'Act like the opposite gender for the day.',
          'Always walk like a beauty pageant contestant.',
          'Tuck your hair behind your ear everytime you speak.',
          'Bow down everytime someone passes through the door.'
          ];
      
      //Function triggered when button is clicked
      $('.cons-btn').click(function() {
        //Generate random number between 0 & the length of the array
        var numRand = Math.floor(Math.random() * consequences.length);
    //Print to html:
        $('#consequences').text(consequences[numRand]);
        //Remove item from array so that the question will not be repeated:
        consequences.splice(numRand, 1);
        return false;
      });                     
    }
    
    $(document).ready(main);

block content
    .container
        h1 What's My Consequence?
        a(href="#") 
            .cons-btn 
                p Let's do this!
        h2#consequences
        

        
